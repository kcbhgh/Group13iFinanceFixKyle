@model Group13iFinanceFix.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
}

<h2>Reset Your Password</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email) <!--Box to enter email-->
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword) <!--Box to enter new password-->
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword) <!--Box to confirm new password-->
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>

    if (ViewBag.Message != null)
    {
        <p class="text-danger mt-2">@ViewBag.Message</p> <!--Message after it was successful but not working-->
    }
    if (TempData["Success"] != null)
    {
        <p class="text-success mt-2">@TempData["Success"]</p>
    }
}
