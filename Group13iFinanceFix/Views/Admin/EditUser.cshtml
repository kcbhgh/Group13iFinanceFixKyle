@model Group13iFinanceFix.Models.iFINANCEUser

@{
    ViewBag.Title = "Edit User";
}

<h2>Edit User</h2>

@using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)   //Keep the user ID hidden

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.UsersName, new { @class = "form-control" }) <!--User name inut-->
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBox("Email", Model.NonAdminUser?.Email, new { @class = "form-control" }) <!--Email input-->
    </div>

    <div class="form-group">
        <label>Address</label>
        @Html.TextBox("Address", Model.NonAdminUser?.StreetAddress, new { @class = "form-control" }) <!--Address input-->
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a href="@Url.Action("DeleteUser", "Admin", new { id = Model.ID })" class="btn btn-danger float-end" onclick="return confirm('Are you sure you want to delete this user?');">Delete User</a>
}
